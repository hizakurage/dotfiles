# -*- mode: conf-unix -*-

[alias]
    g   = log --graph --decorate=short --oneline
    ga  = !"git g --all"
    co  = checkout

[url "git@github.com:"]
    pushinsteadof = https://github.com/

[include]
    path = ~/.gitconfig.local

[core]
    excludesfile = ~/.gitignore_global

[color]
	ui = auto

[diff]
    indentHeuristic = true
